@model IEnumerable<Reports>

@{
    ViewData["Title"] = "Sales Reports";
}

<h2>Sales Reports</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Report Name</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Generated By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var report in Model)
            {
                <tr>
                    <td>@report.ReportName ?? "N/A"</td>
                    <td>@report.Description ?? "No description available"</td>
                    <td>@report.CreatedAt ?? "N/A"</td>
                    <td>
                        @if (report.GeneratedBy != null)
                        {
                            @report.GeneratedBy.FirstName @report.GeneratedBy.LastName
                        }
                        else
                        {
                            <span class="text-muted">Unknown</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@report.ReportID" class="btn btn-primary btn-sm">View</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No reports found.</td>
            </tr>
        }
    </tbody>
</table>


