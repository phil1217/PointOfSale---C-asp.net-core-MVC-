@model ViewOrderModel

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<div>
    <h4>Summary</h4>
    <hr />
    <h6>Order</h6>
    <dl class="row">
        <dt class="col-sm-2">OrderID</dt>
        <dd class="col-sm-10">@Model.Orders.OrderID</dd>

        <dt class="col-sm-2">CustomerID</dt>
        <dd class="col-sm-10">@Model.Orders.CustomerID</dd>

        <dt class="col-sm-2">OrderDate</dt>
        <dd class="col-sm-10">@Model.Orders.OrderDate</dd>

        <dt class="col-sm-2">OrderStatus</dt>
        <dd class="col-sm-10">@Model.Orders.OrderStatus</dd>

        <dt class="col-sm-2">TotalAmount</dt>
        <dd class="col-sm-10">@Model.Orders.TotalAmount</dd>

        <dt class="col-sm-2">TaxAmount</dt>
        <dd class="col-sm-10">
            @(@Model.Orders.TaxAmount == 0 ?  0 : @Model.Orders.TaxAmount)%
        </dd>

        <dt class="col-sm-2">DiscountAmount</dt>
        <dd class="col-sm-10">
            @(@Model.Orders.DiscountAmount == 0 ? 0 : @Model.Orders.DiscountAmount)%
        </dd>

    </dl>
    <h6>Order Details</h6>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Product ID</th>
                <th>Order Detail ID</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.OrderDetailsList != null && Model.OrderDetailsList.Any())
            {
                foreach (var od in Model.OrderDetailsList)
                {
                    <tr>
                        <td>@od.ProductID</td>
                        <td>@od.OrderDetailID</td>
                        <td>@od.Quantity</td>
                        <td>@String.Format("{0:C}", od.UnitPrice)</td>
                        <td>@String.Format("{0:C}", od.TotalPrice)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No order details available</td>
                </tr>
            }
        </tbody>
    </table>

</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
