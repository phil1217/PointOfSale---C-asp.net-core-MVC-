@model TaxRules

@{
    ViewData["Title"] = "Add New Tax Rule";
}

<h2>Add New Tax Rule</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="TaxRuleID" class="control-label"></label>
        <input asp-for="TaxRuleID" class="form-control" />
        <span asp-validation-for="TaxRuleID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaxName" class="control-label"></label>
        <input asp-for="TaxName" class="form-control" />
        <span asp-validation-for="TaxName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaxRate" class="control-label"></label>
        <input asp-for="TaxRate" class="form-control" type="number" />
        <span asp-validation-for="TaxRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EffectiveDate" class="control-label"></label>
        <input asp-for="EffectiveDate" class="form-control" type="date" />
        <span asp-validation-for="EffectiveDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

