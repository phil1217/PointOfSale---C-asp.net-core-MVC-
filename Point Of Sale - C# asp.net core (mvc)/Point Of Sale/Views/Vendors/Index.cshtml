@model IEnumerable<Suppliers>

@{
    ViewData["Title"] = "Vendor Management";
}

<h1>Vendor Management</h1>
<a asp-action="AddNewVendor" class="btn btn-primary">Add New Vendor</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
        <tr>
            <td>@supplier.SupplierID</td>
            <td>@supplier.SupplierName</td>
            <td>@supplier.Email</td>
            <td>@supplier.PhoneNumber</td>
            <td>
                <a asp-action="ViewVendor" asp-route-id="@supplier.SupplierID" class="btn btn-info">View</a>
                <a asp-action="EditVendor" asp-route-id="@supplier.SupplierID" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@supplier.SupplierID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>