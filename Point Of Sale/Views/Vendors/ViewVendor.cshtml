@model Suppliers

@{
    ViewData["Title"] = "Vendors";
}

<div>
    <h4>Vendor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Supplier Name</dt>
        <dd class="col-sm-10">@Model.SupplierName</dd>

        <dt class="col-sm-2">Contact Name</dt>
        <dd class="col-sm-10">@Model.ContactName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>

        <dt class="col-sm-2">Postal Code</dt>
        <dd class="col-sm-10">@Model.PostalCode</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdatedAt</dd>
    </dl>
</div>

<div>
    <a asp-action="EditVendor" asp-route-id="@Model.SupplierID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>