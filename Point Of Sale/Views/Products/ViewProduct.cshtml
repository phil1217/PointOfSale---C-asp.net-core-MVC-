@model ProductSupplierViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.Product?.ProductName</dd>

        <dt class="col-sm-2">Product Description</dt>
        <dd class="col-sm-10">@Model.Product?.Description</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.ProductCategories?.CategoryName</dd>

        <dt class="col-sm-2">Category Description</dt>
        <dd class="col-sm-10">@Model.ProductCategories?.Description</dd>

        <dt class="col-sm-2">Supplier</dt>
        <dd class="col-sm-10">@Model.Suppliers?.SupplierName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.ProductSupplier?.Price</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.ProductSupplier?.QuantityInStock</dd>

        <dt class="col-sm-2">Reorder Level</dt>
        <dd class="col-sm-10">@Model.ProductSupplier?.ReorderLevel</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.ProductSupplier?.CreatedAt</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.ProductSupplier?.UpdatedAt</dd>
    </dl>
</div>

<div>
    <a asp-action="EditProduct" asp-route-id="@Model.ProductSupplier?.ProductSupplierID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

