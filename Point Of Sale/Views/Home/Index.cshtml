@model ReportsViewModel

@{
    ViewData["Title"] = "Home";
}

@{
    ViewData["Title"] = "Reports";
}

<h2>Sales Report</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Sale ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Total Amount</th>
            <th>Sale Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.SalesReport != null && Model.SalesReport.Any())
        {
            foreach (var sale in Model.SalesReport)
            {
                <tr>
                    <td>@sale.SaleID</td>
                    <td>@sale.ProductName</td>
                    <td>@sale.Quantity</td>
                    <td>@sale.TotalAmount</td>
                    <td>@sale.SaleDate</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No sales data available.</td>
            </tr>
        }
    </tbody>
</table>

<h2>Product Report</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock Quantity</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ProductReport != null && Model.ProductReport.Any())
        {
            foreach (var product in Model.ProductReport)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.Category</td>
                    <td>@product.Price</td>
                    <td>@product.StockQuantity</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No product data available.</td>
            </tr>
        }
    </tbody>
</table>


